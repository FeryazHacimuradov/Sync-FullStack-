@model Setting
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="admin" asp-controller="setting" asp-action="update" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model.Logo" class="form-label">Logo</label>
                    <input class="form-control" asp-for="@Model.Logo">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.MainTitle" class="form-label">MainTitle</label>
                    <input class="form-control" asp-for="@Model.MainTitle">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.MainContent" class="form-label">MainContent</label>
                    <input class="form-control" asp-for="@Model.MainContent">
                </div>
                <div class="mb-3">
                    <img src="~/Uploads/@Model.Image" alt="Alternate Text" width="100" />
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile2">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input class="form-control" asp-for="@Model.Email">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Address" class="form-label">Address</label>
                    <input class="form-control" asp-for="@Model.Address">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Phone" class="form-label">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone">
                </div>
                <input asp-for="@Model.Id" hidden />
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
